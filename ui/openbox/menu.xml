<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<item label="Terminal">
			<action name="Execute">
				<execute>urxvtc -e /bin/bash -i -c &quot;tmux attach&quot;</execute>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<execute>thunar</execute>
			</action>
		</item>
		<separator/>
		<item label="Browser">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<!-- This requires the presence of the 'menu' package to work -->
		<item label="Office">
			<action name="Execute">
				<execute>loffice</execute>
			</action>
		</item>
		<item label="Astah UML">
			<action name="Execute">
				<execute>astah</execute>
			</action>
		</item>
		<separator/>
		<item label="ObConf">
			<action name="Execute">
				<execute>obconf</execute>
			</action>
		</item>
		<item label="Reboot">
			<action name="Execute">
				<command>sudo reboot</command>
			</action>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<command>sudo shutdown -h now</command>
			</action>
		</item>
	</menu>
</openbox_menu>
