#
# Openbox autostart configuration
#

# enable compositing
xcompmgr -c -C -t-5 -l-5 -r4.2 -o.55 &

# screensaver & locker
xscreensaver-command -exit &
xscreensaver -no-splash &

# caps lock
setxkbmap -option ctrl:nocaps

# monitor config
(
xrandr --output LVDS-1 --mode 1680x1050 &&
xrandr --output VGA-1 --mode 1440x900 --right-of LVDS-1
) &

# urxvt setup
xrdb -merge ~/.Xresources

# daemonize urxvt
urxvtd -q -o -f

# daemonize thunar
thunar --daemon &

# restore wallpaper
nitrogen --restore &

# start conky
(sleep 2s && conky -q) &

# start tint
tint2 &

# volume
volumeicon &

# power manager
xfce4-power-manager &

# clipboard manager
(sleep 3s && clipit) &
