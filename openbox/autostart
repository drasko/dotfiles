# SSH agent
# eval $(ssh-agent) &

# enable compositing
xcompmgr -c -C -t-5 -l-5 -r4.2 -o.55 &

# restore wallpaper
nitrogen --restore &

# start tint
tint2 &

# start conky
conky -q &

# daemonize thunar
thunar --daemon &

# caps lock
setxkbmap -option ctrl:nocaps

# monitor config
xrandr --output VGA-1 --right-of LVDS-1

# urxvt setup
xrdb -merge ~/.Xresources

# daemonize urxvt
urxvtd -q -o -f
